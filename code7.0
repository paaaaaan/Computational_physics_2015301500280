import numpy as np
import matplotlib.pyplot as plt
plt.figure()
list_x=[1,]
list_y=[1,]
list_vx=[4,]
x=1
y=1
vx=4
vy=5
dt=0.01
t=0
while(t<100):
    x=x+vx*dt
    y=y+vy*dt
    t=t+dt
    if(x>10) or (x<0):
        vx=-vx
    if(y>10) or (y<0):
        vy=-vy
    print(vx,vy,x,y)
    list_x.append(x)
    list_y.append(y)
    list_vx.append(vx)    
plt.plot(list_x, list_vx,'.',label='x,vx')
plt.title('plot of vx vs. x')
plt.xlabel('x')
plt.ylabel('vx')
plt.xlim(0,10)
plt.ylim(-5,5)
plt.show()
